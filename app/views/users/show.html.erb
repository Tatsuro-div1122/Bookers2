<h1>User info</h1>
<%= attachment_image_tag @user, :profile_image %>
<h3><%= @user.name %></h3>
<h3><%= @user.introduction %></h3>
<%= link_to "Profile Edit", edit_user_path(@user) %>

<h1>New book</h1>
<%= form_for(@book) do |f| %>
<%= f.label :title, "Title" %>
<%= f.text_field :title %>
<%= f.label :body, "Opinion" %>
<%= f.text_area :body %>
<%= f.submit "Create Book" %>
<% end %> 

<h1>Books</h1>
<table>
	<tr>
		<th>Title</th>
		<th>Opinion</th>
	</tr>
<% @books. each do |book| %>
    <tr>
    	<td><%= attachment_image_tag @user, :pofile_image %></td>
    	<td><%= book.title %></td>
    	<td><%= book.body %></td>
    	<td><%= link_to "Edit", edit_book_path(book.id) %></td>
    	<td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>

    </tr>
<% end %>
</table>>
