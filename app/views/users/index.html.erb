<div class='container'>
	<div class='row'>
		<div class='col-xs-3'>
	  		<%= render 'shared/sidebar', user: @user, book: @book %>
		</div>


	    <div class='col-xs-9'>
		 	<h2>Users</h2>

			<Table  class="table">
			  <thead>
				  <tr>
					<th>image</th>
					<th>name</th>
					<th></th>
				  </tr>
			  </thead>
			  <tbody>
				  <% @users. each do |user| %>
				  <tr>
						<td><%= attachment_image_tag user, :profile_image, fallback: "no_image.jpg" %></td>
						<td><%= user.name %></td>
						<td><%= link_to "Show", user_path(user.id) %></td>
				   </tr>
				   <% end %>
			  </tbody>
			</Table>
		</div>
	</div>
</div>
