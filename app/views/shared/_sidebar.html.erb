	<h2>User info</h2>
	<table class='table'>
		<tr><%= attachment_image_tag user, :profile_image, fallback: "no_image.jpg" %></tr>
		<tr>
			<th>name</th>
			<th><%= user.name %></th>
		</tr>
		<tr>
			<th>introduction</th>
			<th><%= user.introduction %></th>
		</tr>
	</table>

	<%= link_to "", edit_user_path(user.id), class: "col-lg-12 btn btn-default glyphicon glyphicon-wrench" %><br>


	<h2>New book</h2>
	<% if book.errors.any? %>
	<h4><%= book.errors.count %> errors prohibited this book from being saved:</h4>
	<ul>
		<% book.errors.full_messages.each do |message| %>
			<li><%= message %></li>
		<% end %>
	</ul>
	<% end %>
	<%= form_for(book) do |f| %>
		<%= f.label :title, "Title" %><br>
		<%= f.text_field :title, class: "col-lg-12" %><br>
		<%= f.label :body, "Opinion" %><br>
		<%= f.text_area :body, class: "col-lg-12" %><br>
		<%= f.submit "Create Book", class: "col-lg-12 bg-primary" %>
	<% end %>
