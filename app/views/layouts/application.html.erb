<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <header class="navbar  navbar-inverse">
    <div class="container">
      <nav class='nav navbar-nav navbar-left' >
        <h3 class="text-muted">Bookers</h3>
      </nav>
      <nav>
        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
          <li>
            <%= link_to user_path(current_user) do %>
            <span class="glyphicon glyphicon-home text-muted" aria-hidden="true"></span>
            Home
            <% end %>
          </li>
          <li>
            <%= link_to users_path do %>
            <span class="glyphicon glyphicon-user text-muted" aria-hidden="true"></span>
            Users
            <% end %>
          </li>
           <li>
            <%= link_to books_path do %>
            <span class="glyphicon glyphicon-book text-muted" aria-hidden="true"></span>
            Books
            <% end %>
           </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
              <span class="glyphicon glyphicon-log-out" aria-hidden="true"></span>
              logout
              <% end %>
            </li>
          <% else %>
          <li>
            <%= link_to  root_path do %>
            <span class="glyphicon glyphicon-home text-muted" aria-hidden="true"></span>
            Home
            <% end %>
          </li>
          <li>
            <%= link_to  home_about_path do %>
            <span class="glyphicon glyphicon-link text-muted" aria-hidden="true"></span>
            About
            <% end %>
          </li>
          <li>
            <%= link_to new_user_registration_path do %>
            <span class="glyphicon glyphicon-edit sign_up text-muted" aria-hidden="true"></span>
            sign up
            <% end %>
          </li>
          <li>
            <%= link_to "login", new_user_session_path, class:"glyphicon glyphicon-log-in text-muted" %>
          </li>
          <% end %>
        </ul>
      </nav>
    </div>
  </header>
  <body>
      <% if flash[:notice] %>
          <p class = "success"><%= flash[:notice] %></p>
      <% end %>
    <%= yield %>
  </body>
  <footer>
    <div class='container'>
      <div class='row'>
        <div class='col-xs-3 col-xs-offset-9'>
          <p>CopyRight Infratop.inc</p>
        </div>
      </div>
  </footer>
</html>
