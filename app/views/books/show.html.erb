<p class="text-success"><%= flash[:notice] %></p>
<div class='container'>
    <div class='row'>
        <div class='col-lg-3'>
        	<%= render 'shared/sidebar', user: @book.user, book: @book %>
		</div>
		<div class='col-lg-9'>
			<h1>Book detail</h1>
			<table  class="table">
				<tbody>
					<tr>
					<td><%= link_to user_path(@book.user.id) do %>
						<%= attachment_image_tag @book.user, :profile_image, fallback: "no_image.jpg"%>
						<% end %>
					</td>
					<td><%= link_to user_path(@book.user.id) do %>
						<%= @book.user.name %>
						<% end %>
					</td>
					<td><%= link_to book_path(@book.id) do %>
						<%= @book.title %>
						<% end %>
						</td>
					<td><%= @book.body %></td>
					<td><% if @book.user == current_user %>
						<%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success" %>
						<% end %>
						</td>
					<td><% if @book.user == current_user %>
						<%= link_to "Destroy", book_path(@book.id), method: :delete, class: "btn btn-danger", "data-confirm" => "Are you sure?" %></td>
						<% end %>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
</div>